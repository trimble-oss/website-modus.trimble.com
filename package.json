{
  "name": "modus-framework-styleguide",
  "version": "1.0.0",
  "private": true,
  "description": "The Modus Framework styleguide static site built with Hugo",
  "homepage": "https://modus.trimble.com",
  "bugs": {
    "url": "https://jira.trimble.tools/projects/ETHER/issues/"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@bitbucket.trimble.tools/tmds/modus-styleguide.git"
  },
  "license": "private",
  "author": "Trimble",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "npm-run-all lint-css && npx hugo && npm run lint-html",
    "build-dev": "npm-run-all lint-css && npx hugo --config config.yml,config-dev.yml && npm run lint-html",
    "deploy": "cross-env s3-deploy './build/**/*.{css,html,ico,jpg,js,json,webmanifest,map,png,svg,xml}' --cwd './build/' --region us-east-1 --bucket prod-styles-trimblemaps --cache 31557600",
    "deploy:dev": "cross-env s3-deploy './build/**/*.{css,html,ico,jpg,js,json,webmanifest,map,png,svg,xml}' --cwd './build/' --region us-east-1 --bucket dev-styles-trimblemaps --cache 0",
    "imagemin": "npx imagemin-cli static/img/headers/components/*.png --out-dir=static/img/headers/components",
    "lint-css": "stylelint \"assets/styles/*.scss\"",
    "lint-html": "htmlhint \"build/**/index.html\"",
    "lint-js": "npx eslint \"assets/js/*.js\" --fix",
    "lint-links": "npx linkinator build --recurse --silent --skip styleguide-dev.trimblemaps.com",
    "lint-markdown": "npx markdownlint-cli content/**/*.md",
    "lint-spellcheck": "npx cspell \"content/**/*.md\"",
    "prettier": "prettier --write \"assets/**/*.*\"",
    "serve": "hugo serve --port 4000 --disableFastRender --navigateToChanged",
    "svgo": "npx svgo --folder=\"static/img/icons\"",
    "test": "npm-run-all lint-css lint-js lint-markdown lint-html lint-links"
  },
  "devDependencies": {
    "@trimbleinc/modus-bootstrap": "^1.3.1",
    "autoprefixer": "10.4.1",
    "cross-env": "7.0.3",
    "htmlhint": "1.1.0",
    "hugo-bin": "0.79.2",
    "list.js": "2.3.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.5",
    "postcss-cli": "9.1.0",
    "prettier": "^2.5.1",
    "s3-deploy": "^1.4.0",
    "stylelint": "14.2.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard-scss": "3.0.0"
  },
  "hugo-bin": {
    "buildTags": "extended"
  }
}
